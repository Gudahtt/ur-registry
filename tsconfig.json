{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
